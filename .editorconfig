# Top-level EditorConfig file
root = true

# Règles par défaut pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4

# HTML, CSS, SCSS
[*.{html,css,scss}]
indent_size = 2

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2
# JSON n'accepte pas les trailing commas ou commentaires, prudence avec les trim options

# YAML / YML
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false  # parfois les espaces sont significatifs

# Markdown
[*.md]
trim_trailing_whitespace = false  # pour conserver les sauts de ligne manuels
insert_final_newline = true
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 4

# TOML, INI, env files
[*.{toml,ini,env}]
indent_size = 2
